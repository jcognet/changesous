{% import "macro/general.html.twig" as generalMacro %}
{% extends "BookBundle::base.html.twig" %}

{% block title %}BookBundle:LivreController:liste{% endblock %}

{% block body %}
    <div class="col-sm-6" id="liste_livres">
        <h2>Liste des livres</h2>
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th class="col-sm-1 {{ generalMacro.gereTri(liste_livres, 'l.titre') }}">
                    {{ knp_pagination_sortable(liste_livres, 'Titre', 'l.titre') }}
                </th>
                <th class="col-sm-1 {{ generalMacro.gereTri(liste_livres, 'l.dateCreation') }}">
                    {{ knp_pagination_sortable(liste_livres, 'Date de cr√©ation', 'l.dateCreation') }}
                </th>
                <th class="col-sm-1">ISBN</th>
            </tr>
            </thead>
            <tbody>
            {% for livre in liste_livres %}
                <td>
                    {{ livre.titre }}
                </td>
                <td>
                    {{ livre.dateCreation|date('d/m/Y')  }}
                </td>
                <td>
                    {{ livre.isbn10 }}
                </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    <div class="col-sm-6">
        <div id="detail_livre">

        </div>
    </div>
{% endblock %}
